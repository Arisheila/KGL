doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Purchases Portal
    link(rel='stylesheet', href='/assets/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/assets/css/login.css')
    link(rel='stylesheet', href='/assets/css/page.css')
    link(rel='stylesheet', href='/assets/css/sales.css')
  body(onload='firstFocus()')
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container-fluid
        img(src='/img/logokgl.jpeg', alt='')
        a.navbar-brand(href='#') KGL
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | SALES
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='/sales') Sales Input
                li
                  a.dropdown-item(href='/sales/report') Sales Records
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | CREDIT SALES
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='/credit') Credit Sales Input
                li
                  a.dropdown-item(href='/credit/report') Credit Sales Records
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | PROCUREMENT
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='/purchases') Procurement Input
                li
                  a.dropdown-item(href='/purchases/report') Procurement Records
            
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | FARM DETAILS
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='/farm') Farm Record Input
                li
                  a.dropdown-item(href='/farm/report') Farm Report
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | REGISTER
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='/register') Register Here
                li
                  a.dropdown-item(href='/report/register') Register Records  
            li.nav-item
              a.nav-link(href='/landing') LOGOUT
    .container
      form(method="POST" action="/purchases/edit?id="+purchase._id  name='registration' onblur='firstFocus()')
        .brand-title PROCUREMENT INPUT
        .inputs
          .row
            .tableRow.col
              label Name of produce (kgs)
              select(name='nameofProduce' onblur='valProduce()' )
                option(value='beans' selected=purchase.nameofProduce==='beans') Beans
                option(value='maize' selected=purchase.nameofProduce==='maize') Maize
                option(value='cowpeas' selected=purchase.nameofProduce==='cowpeas') Cowpeas
                option(value='gnuts' selected=purchase.nameofProduce==='gnuts') G-nuts
                option(value='soyabeans' selected=purchase.nameofProduce==='soyabeans') Soya Beans
            .tableRow.col
              label Branch
              select(name='branch' onblur='valBran()')
                option(value='ggaba' selected=purchase.branch==='ggaba') Ggaba
                option(value='ntinda' selected=purchase.branch==='ntinda') Ntinda
          .row
            .tableRow.col
              label Date/Time of produce:
                  //- input(type='datetime-local' selected=purchase.date name='date', onblur='valdate()' )
              #{purchase.date}    
            .tableRow.col
              label Tonnage (kgs)
              input(type='number', name='tonnage', value = purchase.tonnage onblur='valTon()')
          .row
            .tableRow.col
              label Cost(ugx):
              input(type='number', name='thecost', value = purchase.thecost onblur='valCost()')
            .tableRow.col
              label Name of the dealer:
              input(type='text', name='nameofthedealer', value = purchase.nameofthedealer onblur='valDealer()')
          .row
            .tableRow.col
              label Price to be sold :
              input(type='number', name='pricetosold', value = purchase.pricetosold onblur='valPrice()')
              span#paiderror
            .tableRow.col
              label Contact:
              input(type='text', name='contact', placeholder='0705522174', value = purchase.contact  onblur='valContact()')
            .tableRow.col
              label Type of produce:
              input(type='text', name='goods', value = purchase.goods onblur='valTop()')  
          .row
            .tableRow
              label
              button#mybutton.btnc(type="submit") Update
