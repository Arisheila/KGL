extends layout 
block content
    .container-fluid
      h2 Credit Records
      p TOTAL AMOUNT DUE 
      p #{total.totalAmountdue} ugx 
      p TOTAL TONNAGE SOLD OUT 
      p #{total.totalTonnage} kgs
      .row
        .col.table-responsive
          table.table.table-bordered.table-hover.table-secondary(style='margin-top:15px;')
            thead
                tr
                  th Name of buyer
                  th National ID: 
                  th Location
                  th Contacts
                  th Amount due
                  th Sales Agent Name:
                  th Due Date:
                  th Date of dispatch
                  th Type of Produce:
                  th Produce name
                  th Branch
                  th Tonnage
                  th Edit 
                  th Delete
            tbody
            if credits.length
              each credit in credits
                  tr
                      td #{credit.buyername}
                      //name and email have to match exactly with models database file as they are written in small case
                      td #{credit.nationalid}
                      td #{credit.location}
                      td #{credit.contact}
                      td #{credit.amountdue}
                      td #{credit.salesagent}
                      td #{credit.date}
                      td #{credit.dispatch}
                      td #{credit.goods}
                      td #{credit.nameofproduce}
                      td #{credit.branch}
                      td #{credit.tonnage}     
                      td
                        a.btn.btn-dark.btn-block(href='/credit/edit/'+credit.id) Edit
                      td
                        form.delete(method='post', action='/credit/delete')
                          input(type='hidden', name="id", value=credit._id)
                          button(type='submit') Delete
