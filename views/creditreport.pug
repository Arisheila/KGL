.container 
        h2.reg Credit List.
        table.table.table-washers 
        thead
            tr
                th Name of buyer
                th National ID: 
                th Location
                th Contacts
                th Amount due
                th Sales Agent Name:
                th Due Date:
                th Date of dispatch
                th Type of Produce:
                th Produce name
                th Branch
                th Tonnage
            tbody
            if products.length
                each product in products
                    tr
                        td #{signup.buyername}
                        //name and email have to match exactly with models database file as they are written in small case
                        td #{signup.nationalid}
                        td #{signup.location}
                        td #{signup.contact}
                        td #{signup.amountdue}
                        td #{signup.salesagent}
                        td #{signup.date}
                        td #{signup.dispatch}
                        td #{signup.goods}
                        td #{signup.nameofproduce}
                        td #{signup.branch}
                        td #{signup.tonnage}



                            a.button2(href="/products/edit/"+product._id) Edit 
                            
                        td
                            form.delete(method="post" action='/products/delete')
                                input(type="hidden", placeholder="", name="id", value=product._id)
                                button.button2(type="submit") Delete


