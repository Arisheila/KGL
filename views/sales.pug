.container
  form(name='registration' onblur='firstFocus()' action="/sales" method="POST")
    .brand-title Sales Input
    .inputs
      .row
        .tableRow.col
          label Name of produce(kgs):
          select(name='producename' id='' onblur='valProd()')
            option(value='default')  Select name of produce
            option(value='Beans') Beans
            option(value='Grain') Grain
            option(value='Maize') Maize
            option(value='cpeas') Cowpeas
            option(value='G_nuts') G-nuts
            option(value='Soya Beans') Soya Beans
        .tableRow.col
          label Branch
          select(name='branch' onblur='valBran()')
            option(value='default') Branch Name
            option(value='Gga') Ggaba
            option(value='nt') Ntinda
      .row
        .tableRow.col
          label Amount paid(ugx)
          input(type='alphanumeric' name='amountpaid' onblur='valPaid()')
        .tableRow.col
          label Buyer&apos;s Name:
          input(type='alphanumeric' name='buyername' onblur='valBuyer()')
      .row
        .tableRow.col
          label Sales agent&apos;s name:
          input(type='alphanumeric' name='agentsname' onblur='valSale()')
        .tableRow.col
          label Date and Time 
          input(type='datetime-local' name='dateandtime' onblur='valDate()')
      .row
        .tableRow.col
          label Tonnage (kgs)
          input(type='alphanumeric' name='tonnage' onblur='valTonnage()')
      .row
        div
          label
          button#mybutton.btnc Submit
