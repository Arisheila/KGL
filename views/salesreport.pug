extends layout 
block content 
    .container-fluid
      h2 Sales Report
      .row
        .col.table-responsive
          table.table.table-bordered.table-hover.table-secondary(style='margin-top:15px;')
            thead
              tr
                th Name of produce(kgs)
                th Branch
                th Amount paid(ugx) 
                th Buyer's Name:
                th Sales agent's name:
                  //- th Date and Time
                th Tonnage
                th Edit 
                th Delete
            tbody    
            if sales.length
              each sale in sales
                  tr
                    td #{sale.producename}
                    td #{sale.branch} 
                    td #{sale.amountpaid} 
                    td #{sale.buyername} 
                    td  #{sale.agentsname}
                      //- td #{sale.dateandtime} 
                    td #{sale.tonnage}
                    td
                      form.edit(method='post', action='/sales/edit')
                        input(type='hidden', name='firstname', value='signup.firstname')
                        button(type='submit') Edit
                    td
                      form.delete(method='post', action='/sales/delete')
                        input(type='hidden', name="id", value=sale._id)
                        button(type='submit') Delete
