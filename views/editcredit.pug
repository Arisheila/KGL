doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Credit Sales Portal
    link(rel='stylesheet', href='/assets/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/assets/css/login.css')
    link(rel='stylesheet', href='/assets/css/page.css')
  body(onload='firstFocus()')
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container-fluid
        img(src='/img/logokgl.jpeg', alt='')
        a.navbar-brand(href='#') KGL
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | SALES
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='/sales') Sales Input
                li
                  a.dropdown-item(href='/sales/report') Sales Records
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | PROCUREMENT
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='/purchases') Procurement Input
                li
                  a.dropdown-item(href='/purchases/report') Procurement Records
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | CREDIT SALES
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='/credit') Credit Sales Input
                li
                  a.dropdown-item(href='/credit/report') Credit Sales Records
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | REGISTER
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='/register') Register Here
                li
                  a.dropdown-item(href='/report/register') Register Records    
            li.nav-item
              a.nav-link(href='/landing') LOGOUT
    .container
      form(method="POST" action="/credit/edit?id="+credit._id name='registration' onblur='firstFocus()')
        .brand-title Credit Sales Input
        .inputs
          .row
            .tableRow.col
              label Name of buyer
              input(type='alphanumeric', name='buyername', onblur='valBuyer()' value=credit.buyername)
            .tableRow.col
              label National ID:
              input(type='alphanumeric', name='nationalid', onblur='valNin()' value=credit.nationalid)
          .row
            .tableRow.col
              label Location
              input(type='text', name='location', onblur='valLoc()' value=credit.location)
            .tableRow.col
              label Contacts
              input(type='number', name='contact', placeholder='0783023810', onblur='valCon()' value=credit.contact)
          .row
            .tableRow.col
              label Amount due
              input(type='number', name='amountdue', onblur='valDue()' value=credit.amountdue)
            .tableRow.col
              label Sales Agent
              input(type='text', name='salesagent', onblur='valAgent()' value=credit.salesagent)
          .row
            .tableRow.col
              label Tonnage(kgs)
              input(type='number', name='tonnage', onblur='valTonnage()' value=credit.tonnage)
            
            .tableRow.col
                label Type of produce:
                input(type='text', name='goods', onblur='valTop()' value=credit.goods)       
          .row
            .tableRow.col
              label Produce name
              select(name="nameofproduce" onblur="valProduce()")
                option(value='beans' selected=credit.nameofproduce==='beans') Beans
                option(value='maize' selected=credit.nameofProduce==='maize') Maize
                option(value='cowpeas' selected=credit.nameofProduce==='cowpeas') Cowpeas
                option(value='gnuts' selected=credit.nameofProduce==='gnuts') G-nuts
                option(value='soyabeans' selected=credit.nameofProduce==='soyabeans') Soya Beans
            //-   .tableRow.col
            //-     label Due Date:
            //-     input(type='datetime-local', name='date', onblur='valDate()' value=credit.date)
            //-   .tableRow.col
            //-     label Date of dispatch
            //-     input(type='datetime-local', name='dispatch', onblur='valDispatch()' value=credit.dispatch )    
            .tableRow.col
              label Branch
              select(name='branch' onblur="valBran()")
                option(value='ggaba' selected=credit.branch==='ggaba') Ggaba
                option(value='ntinda' selected=credit.branch==='ntinda') Ntinda 
          div
            label
            button#mybutton.btnc Update
