doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title KGL Manager&apos;s Portal
  link(rel='stylesheet' href='/assets/bootstrap/css/bootstrap.min.css')
  link(rel='stylesheet' href='/assets/css/login.css')
  link(rel='stylesheet' href='/assets/css/page.css')
nav.navbar.navbar-expand-lg.navbar-light.bg-light
  .container-fluid
    img(src='/img/logokgl.jpeg' alt='')
    a.navbar-brand(href='#') KGL
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNavDropdown' aria-controls='navbarNavDropdown' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarNavDropdown.collapse.navbar-collapse
      ul.navbar-nav
        li.nav-item
          a.nav-link.active(aria-current='page' href='') HOME
        li.nav-item
          a.nav-link(href='/html/login.html') LOG IN
        li.nav-item
          a.nav-link(href='/html/kgl.html') LOG OUT
.container
  form(name='registration' onblur='firstFocus()')
    .brand-title PROCUREMENT PRODUCE
    .inputs
      .row
        .tableRow.col
          label Name of produce (kgs)
          select(name='nameofProduce' id='' onblur='valProduce()')
            option(value='default') Name of goods
            option(value='Beans') Beans
            option(value='Grain') Grain
            option(value='Maize') Maize
            option(value='cpeas') Cowpeas
            option(value='G_nuts') G-nuts
            option(value='Soya Beans') Soya Beans
        .tableRow.col
          label Type of produce:
          select(name='goods' id='' onblur='valueTop()')
            option(value='default')  Please select type of goods
            option(value='Beans') Beans
            option(value='Grain') Grain
            option(value='Maize') Maize
            option(value='cpeas') Cowpeas
            option(value='G_nuts') G-nuts
            option(value='Soya Beans') Soya Beans
        .row
          .tableRow.col
            label Date/Time of produce:
            input(type='datetime-local' name='date' onblur='valdate()')
          .tableRow.col
            label Tonnage (kgs)
            input(type='numeric' name='tonnage' onblur='valTon()')
        .row
          .tableRow.col
            label Cost(ugx):
            input(type='numeric' name='thecost' onblur='valCost()')
          .tableRow.col
            label Name of the dealer:
            input(type='alpha-numeric' name='nameofthedealer' onblur='valDealer()')
        .row
          .tableRow.col
            label Branch
            select(name='branch' onblur='valBran()')
              option(value='default') Branch Name
              option(value='ka') Kampala
              option(value='ma') Mbarara
          .tableRow.col
            label Contact:
            input(type='numeric' name='contact' placeholder='0705522174' onblur='valContact()')
        .row
          .tableRow.col
            label Price to be sold :
            input(type='numeric' name='pricetosold' onblur='valPrice(this, paiderror)')
            span#paiderror
          .tableRow
            label
            button(type='submit') Submit
