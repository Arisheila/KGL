doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title KGL REGISTER FORM
    link(href='/assets/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', href='/assets/css/login.css')
  body(onload='firstFocus()')
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container-fluid
        img(src='/img/logokgl.jpeg', alt='')
        a.navbar-brand(href='#') KGL
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | SALES
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='/sales') Sales Input
                li
                  a.dropdown-item(href='/sales/report') Sales Records
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | CREDIT SALES
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='/credit') Credit Sales Input
                li
                  a.dropdown-item(href='/credit/report') Credit Sales Records
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | PROCUREMENT
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='/purchases') Procurement Input
                li
                  a.dropdown-item(href='/purchases/report') Procurement Records
            
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | FARM DETAILS
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='/farm') Farm Record Input
                li
                  a.dropdown-item(href='/farm/report') Farm Report
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | REGISTER
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='/register') Register Here
                li
                  a.dropdown-item(href='/report/register') Register Records  
            li.nav-item
              a.nav-link(href='/landing') LOGOUT  
    .container
      form(action="/register/edit?id="+signup._id method="POST" name='registration' onblur='firstFocus()')
        .brand-title REGISTER HERE
        .inputs
          .row
            .tableRow.col
              label First Name
              input(type='text' name='firstname' onblur='frname()' value=signup.firstname)
            .tableRow.col
              label Surname
              input(type='text' name='surname', onblur='valSec()' value=signup.surname)
          .row
            .col-6
              label Branch
              select(name='branch', onblur='valBran()')
                option(value='ggaba' selected=signup.branch==='ggaba') Ggaba 
                option(value='ntinda' selected=signup.branch==='ntinda') Ntinda
            .col-6
              label Role
              select(name='role', onblur='valRole()')
                option(value='director' selected=signup.role==='director') Director
                option(value='manager' selected=signup.role==='manager') Manager
                option(value='salesagent' selected=signup.role==='salesagent') Sales Agents
          .row
            .tableRow.col
              label EMAIL
              input(type='email', name='email', placeholder='example@test.com', onblur='valEmail()' value=signup.email)
            .tableRow.col
              label PASSWORD
              input(type='password', name='password', placeholder='Min 4 charaters', onblur='valPass()' value=signup.password)
          button(type='submit') Update
    span#footer-content &copy; 2022 Copyright: Arinaitwe Sheila
    script(src='/assets/bootstrap/js/bootstrap.bundle.js')
    script(src='/javascript/register.js')