doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Sales Portal
    link(rel='stylesheet', href='/assets/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/assets/css/login.css')
    link(rel='stylesheet', href='/assets/css/page.css')
    link(rel='stylesheet', href='/assets/css/sales.css')
  body(onload='firstFocus()')
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container-fluid
        img(src='/img/logokgl.jpeg', alt='')
        a.navbar-brand(href='#') KGL
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | SALES
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='/sales') Sales Input
                li
                  a.dropdown-item(href='/sales/report') Sales Records
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | CREDIT SALES
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='/credit') Credit Sales Input
                li
                  a.dropdown-item(href='/credit/report') Credit Sales Records
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | PROCUREMENT
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='/purchases') Procurement Input
                li
                  a.dropdown-item(href='/purchases/report') Procurement Records
            
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | FARM DETAILS
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='/farm') Farm Record Input
                li
                  a.dropdown-item(href='/farm/report') Farm Report
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | REGISTER
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='/register') Register Here
                li
                  a.dropdown-item(href='/report/register') Register Records  
            li.nav-item
              a.nav-link(href='/landing') LOGOUT  
    .container
      form( action="/sales" method="POST" name='registration', onblur='firstFocus()' onsubmit='return Validation();')
        .brand-title Sales Input
        .inputs
          .row
            .tableRow.col
              label Name of produce(kgs):
              select(name='producename' onblur='valProd()')
                option(value='')  Select name of produce
                option(value='beans') Beans
                option(value='maize') Maize
                option(value='cowpeas') Cowpeas
                option(value='gnuts') G-nuts
                option(value='soyabeans') Soya Beans
            .tableRow.col
              label Branch
              select(name='branch', onblur='valBran()')
                option(value='') Branch Name
                option(value='ggaba') Ggaba
                option(value='ntinda') Ntinda
          .row
            .tableRow.col
              label Amount paid(ugx)
              input(type='number', name='amountpaid', onblur='valPaid()')
            .tableRow.col
              label Buyer's Name:
              input(type='alphanumeric', name='buyername', onblur='valBuyer()')
          .row
            .tableRow.col
              label Sales agent's name:
              input(type='alphanumeric', name='agentsname', onblur='valSale()')
            .tableRow.col
              label Date and Time 
              input(type='datetime-local', name='dateandtime', onblur='valDate()')
          .row
            .tableRow.col
              label Tonnage (kgs)
              input(type='number', name='tonnage', onblur='valTonnage()')
          .row
            div
              label
              button#mybutton.btnc Submit
     
